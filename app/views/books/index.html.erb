<div class= "container-fluid">
  <div class= "row">

    <div class="col-md-8 offset-md-1 left-content">
      <div class="row">
        <div class="col-md">
          <h3>蔵書一覧</h3>
          <table class="table table-hover table-borderless col-md ">
            <thead>
              <tr>
                <th>管理番号</th>
                <th>タイトル</th>
                <th>著者</th>
                <th>出版社</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <%= book.book_num %>
                  </td>
                  <td><%= link_to book.title, book_path(book) %>
                  </td>
                  <td>
                    <%= book.author_name %>
                  </td>
                  <td>
                    <%= book.publisher %>
                  </td>
                  <td>
                    <% if book.is_active == true %>
                        <%= "" %>
                      <% else %>
                        <%= "貸出中" %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to "編集", edit_book_path(book), class: "glyphicon glyphicon-pencil btn-sm btn-success" %>
                  </td>
                  <td>
                    <%= link_to "削除", book_path(book), method: :delete, class: "glyphicon glyphicon-pencil btn-sm btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
